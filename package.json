{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "Typescript Node.JS API",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "npm run build && node dist/src/index.js",
    "dev": "npx ts-node-dev src/index.ts",
    "dev:w": "npx ts-node-dev src/index.ts --watch",
    "test": "npx jest",
    "test:functional": "npx jest --projects ./test --runInBand",
    "lint": "npx eslint ./src ./test --ext .ts",
    "lint:fix": "npx eslint ./src ./test --ext .ts --fix",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Hemerson Silva",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.4.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "module-alias": "^2.2.3"
  }
}
